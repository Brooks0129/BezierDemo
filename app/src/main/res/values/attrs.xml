<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="TipBubble">
        <attr name="number" format="integer"/>
        <attr name="radius" format="float"/>
        <attr name="threshold4radius" format="float"/>
        <attr name="number_color" format="color"/>
        <attr name="bubble_color" format="color"/>
        <attr name="number_size" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="WaterDropView">
        <attr name="max_circle_radius" format="dimension"/>
        <attr name="min_circle_radius" format="dimension"/>
        <attr name="waterdrop_color" format="color"/>
        <attr name="topcircle_x" format="dimension"/>
        <attr name="topcircle_y" format="dimension"/>
        <attr name="bottomcircle_x" format="dimension"/>
        <attr name="bottomcircle_y" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="BezierLoadingView">
        <attr name="lv_external_radius" format="dimension"></attr>
        <attr name="lv_internal_radius" format="dimension"></attr>
        <attr name="lv_duration" format="integer"></attr>
        <attr name="lv_start_color" format="color"></attr>
        <attr name="lv_end_color" format="color"></attr>
    </declare-styleable>
</resources>